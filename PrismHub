local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local HttpService = game:GetService("HttpService")

-- üåü STEP 1: LOADING SCREEN
local LoadingGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", LoadingGui)
Frame.Size = UDim2.new(0, 300, 0, 150)
Frame.Position = UDim2.new(0.5, -150, 0.5, -75)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

local Label = Instance.new("TextLabel", Frame)
Label.Size = UDim2.new(1, 0, 1, 0)
Label.Text = "Loading Prism Hub..."
Label.TextColor3 = Color3.fromRGB(255, 255, 255)
Label.TextScaled = true
Label.BackgroundTransparency = 1

task.wait(3) -- simulate loading time
LoadingGui:Destroy()

-- üåü STEP 2: FETCH KEYS FROM REMOTE
local KeyURL = "https://raw.githubusercontent.com/YourUser/YourRepo/main/keys.txt" -- change this
local Keys = {"Prism123"}

local success, keyData = pcall(function()
    return game:HttpGet(KeyURL)
end)

if success then
    for key in string.gmatch(keyData, "[^\r\n]+") do
        table.insert(Keys, key)
    end
else
    warn("‚ö†Ô∏è Could not fetch keys!")
end

-- üåü STEP 3: KEY SYSTEM UI
local KeyGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", KeyGui)
Frame.Size = UDim2.new(0, 250, 0, 120)
Frame.Position = UDim2.new(0.5, -125, 0.5, -60)
Frame.BackgroundColor3 = Color3.fromRGB(30,30,30)

local TextBox = Instance.new("TextBox", Frame)
TextBox.Size = UDim2.new(0, 200, 0, 40)
TextBox.Position = UDim2.new(0.5, -100, 0, 20)
TextBox.PlaceholderText = "Enter Key Here"
TextBox.Text = ""

local Submit = Instance.new("TextButton", Frame)
Submit.Size = UDim2.new(0, 200, 0, 30)
Submit.Position = UDim2.new(0.5, -100, 0, 70)
Submit.Text = "Submit Key"

-- üåü STEP 4: KEY VALIDATION
Submit.MouseButton1Click:Connect(function()
    local entered = TextBox.Text
    if table.find(Keys, entered) then
        KeyGui:Destroy()

        -- üåü STEP 5: PRISM HUB UI
        local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
        local Window = Library.CreateLib("Prism Hub", "DarkTheme")

        local Tab = Window:NewTab("Main")
        local Section = Tab:NewSection("Welcome")
        Section:NewLabel("Access Granted ‚úÖ")
    else
        TextBox.Text = "‚ùå Wrong Key!"
        task.wait(1)
        TextBox.Text = ""
    end
end)
